#!/usr/bin/env python3
"""Run several commands on a number of hosts

Usage:
    sshit [HOSTS ...]

"""
import sys
import queue
import threading
import docopt
import sh


def worker(myhost):
    """Run all commands of a host."""
    while True:
        command = q.get()
        if command is None:
            break
        try:
            sh.ssh(myhost, command)
        except sh.ErrorReturnCode:
            q.task_done()
            q.put(command)
            print("ERR: On", myhost, "command", command, "failed.", file=sys.stderr)
            print("Removing", myhost, "from workers", file=sys.stderr)
        q.task_done()


if __name__ == "__main__":
    ARGS = docopt.docopt(__doc__, version="0.0.1")
    hosts = ARGS["HOSTS"]
    q = queue.Queue()
    threads = []
    for host in hosts:
        t = threading.Thread(target=worker, args=(host,))
        t.start()
        threads.append(t)
    for item in sys.stdin:
        q.put(item)
    q.join()
    for _ in hosts:
        q.put(None)
    for t in threads:
        if t.isAlive():  # thread might have killed itself
            t.join()
